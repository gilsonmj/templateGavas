        <mj-spacer height="15px"></mj-spacer>
        <mj-button font-size="16px" font-family="arial" background-color="#fff" color="#00A3D9" inner-padding="5px 25px" border-radius="15px"><i>ATLETA</i></mj-button>
        <mj-spacer height="50px"></mj-spacer>
      </mj-column>
    </mj-section>
    <mj-section padding="0px" background-url="" background-color="#FF8300">
      <mj-column>
        <mj-image width="600px" src="https://i.imgur.com/iFDdayQ.jpg"></mj-image>
      </mj-column>
    </mj-section>
