      <mj-column vertical-align="middle">
        <mj-image alt="GET EXTRA SHELLS" src="https://i.imgur.com/bQZTIX5.png" width="300px" padding="0px"></mj-image>
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-spacer height="50px"></mj-spacer>
        <mj-text font-size="18px" align="center" color="#ffffff" font-weight="100" font-style="italic" letter-spacing="1px" padding-bottom="2px" font-family="Arial" line-height="1px"><b>GET EXT SHELLS</b></mj-text>
